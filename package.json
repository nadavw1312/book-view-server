{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=14.20.1 <19"
  },
  "scripts": {
    "compile": "yarn clean && tsc --build",
    "compile:watch": "tsc --build --watch",
    "pre:dev": "cross-env NODE_ENV=development nodemon --experimental-modules --es-module-specifier-resolution=node dist/index.js",
    "dev": "concurrently --kill-others \"yarn compile:watch\" \"yarn pre:dev\"",
    "start": "node dist/index.js",
    "clean": "del-cli dist/**/*",
    "watch-ts": "concurrently --kill-others \"yarn clean\" && tsc -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.14",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^7.0.0",
    "http-status": "^1.7.0",
    "joi": "^17.10.1",
    "mongoose": "^7.5.0",
    "pm2": "^5.3.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2"
  }
}
